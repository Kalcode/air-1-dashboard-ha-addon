{
  "name": "air1-dashboard-ha-addon",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "description": "Air quality visualization dashboard for Apollo AIR-1 ESPHome sensors - Home Assistant Addon",
  "workspaces": ["dashboard", "server"],
  "keywords": ["homeassistant", "air-quality", "dashboard"],
  "scripts": {
    "dev": "bun run --cwd server dev:mock & bun run --cwd dashboard dev",
    "build": "bun run build:dashboard",
    "build:dashboard": "bun run --cwd dashboard build",
    "build:server": "echo 'Server has no build step'",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "bun --cwd dashboard run typecheck",
    "check": "bun run lint && bun run typecheck",
    "version:sync": "bun scripts/sync-version.ts",
    "version:validate": "bun scripts/validate-versions.ts",
    "changelog": "git-cliff --bump --unreleased --tag $(bun scripts/get-next-version.ts) --output CHANGELOG.md",
    "release": "bun scripts/release.ts",
    "release:dry": "bun scripts/release.ts --dry-run",
    "prepare": "lefthook install",
    "test": "echo 'No tests yet' && exit 0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/bun": "^1.3.5",
    "git-cliff": "^2.11.0",
    "knip": "^5.83.1",
    "lefthook": "^2.0.13",
    "typescript": "^5.9.3",
    "yaml": "^2.6.1"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "author": "",
  "license": "MIT"
}
